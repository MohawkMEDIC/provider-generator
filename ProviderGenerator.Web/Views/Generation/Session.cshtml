@model ProviderGenerator.Web.Models.ViewModels.SessionViewModel
@{
    ViewBag.Title = "Providers";
}

<div id="data" class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">

    <!-- Header -->
    <div id="header">
        <div class="panel-heading page-title" aria-expanded="false">
            <span class="pull-left glyphicon glyphicon-circle-arrow-left" aria-hidden="true"></span>
            @Html.ActionLink("Session: " + Model.SessionId, "Session", "Generation", new { sessionId = Model.SessionId }, new { @class = "pull-left" })
            <div class="pull-right" aria-expanded="false">
                <span>
                    <span id="runningTime" class="glyphicon glyphicon-calendar" aria-hidden="true"></span>
                </span>
            </div>
        </div>
    </div>

    <div class="check-in panel panel-default">
        <div class="panel-heading" role="button">
            <a role="button" class="row" href="#">
                <div class="col-xs-4 col-md-4">
                    <p class="pull-left">
                        <span class="glyphicon glyphicon-user" aria-hidden="true"></span> Providers
                    </p>
                </div>
                <div class="col-xs-4 col-md-4 text-center">
                    <div class="progress">
                        <div data-value="Provider" class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100">
                        </div>
                    </div>
                </div>
                <div class="col-xs-4 col-md-4">
                    <p class="pull-right">
                        &nbsp;
                    </p>
                </div>
            </a>
        </div>

        <div class="panel panel-body">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>
                            Name
                        </th>
                        <th>
                            Address
                        </th>
                        <th>
                            Practitioner No.
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ProviderViewModels)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Address</td>
                            <td>@item.PractitionerNo</td>
                        </tr>}
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {

    <script type="text/javascript">
        $("#runningTime").after(moment("@Model.CreationTimestamp.ToLocalTime().ToString()").startOf("minutes").fromNow());
    </script>
}