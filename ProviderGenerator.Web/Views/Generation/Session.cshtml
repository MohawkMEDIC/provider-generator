@model ProviderGenerator.Web.Models.ViewModels.SessionViewModel
@{
    ViewBag.Title = "Providers";
}

<div id="data" class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">

    <!-- Header -->
    <div id="header">
        <div class="panel-heading page-title" aria-expanded="false">
            <span class="pull-left glyphicon glyphicon-circle-arrow-left" aria-hidden="true"></span>
            @Html.ActionLink("Session: " + Model.SessionId, "Session", "Generation", new { sessionId = Model.SessionId }, new { @class = "pull-left" })
            <div class="pull-right" aria-expanded="false">
                <span>
                    <span id="runningTime" class="glyphicon glyphicon-calendar" aria-hidden="true"></span>
                </span>
            </div>
        </div>
    </div>

    <div class="check-in panel panel-default">
        <div class="panel-heading" role="button">
            <a role="button" class="row" href="#">
                <div class="col-xs-4 col-md-4">
                    <p class="pull-left">
                        <span class="glyphicon glyphicon-user" aria-hidden="true"></span> Providers
                    </p>
                </div>
                <div class="col-xs-4 col-md-4 text-center">
                    <div class="progress">
                        <div data-value="Provider" class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100" style="width: ((@Model.Count + @Model.Total) * 100)%">
                        </div>
                    </div>
                </div>
                <div class="col-xs-4 col-md-4">
                    <p class="pull-right">
                        &nbsp;
                    </p>
                </div>
            </a>
        </div>

        <div class="panel panel-body">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>
                            UPI
                        </th>
                        <th>
                            Name
                        </th>
                        <th>
                            Address
                        </th>
                        <th>
                            Organization
                        </th>
                        <th>
                            Organization UPI
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ProviderViewModels)
                    {
                        <tr>
                            <td>@item.Upi</td>
                            <td>@item.Name</td>
                            <td>@item.Address</td>
                            <td>@item.OrganizationName</td>
                            <td>@item.OrganizationUpi</td>
                        </tr>}
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {

    <script type="text/javascript">
        $("#runningTime").after(moment("@Model.CreationTimestamp.ToLocalTime().ToString()").startOf("minutes").fromNow());
    </script>
    <script type="text/javascript">
        $(function ()
        {
            var interval = setInterval(function ()
            {
                $(".progress-bar").each(function ()
                {
                    var name = $(this).attr("data-value");

                    var self = this;
                    var runningTime = "<span id='runningTime' class='glyphicon glyphicon-calendar' aria-hidden='true'></span> ";

                    $("#runningTime").parent().html(runningTime + moment("@Model.CreationTimestamp.ToLocalTime().ToString()").startOf("minutes").fromNow());

                    $.ajax("/Generation/Progress?sessionId=@Model.SessionId&component=" + name,
                    {
                        method: "GET",
                        dataType: "json",
                        cache: false,
                        success: function (data)
                        {
                            var progress = ((data.Progress.Count / data.Progress.Total) * 100).toFixed(2);

                            if (data.Progress.Count >= data.Progress.Total)
                            {
                                $(self).removeClass("active");

                                progress = 100;

                                if ($(".progress-bar.active").size() == 0)
                                {
                                    clearInterval(interval);
                                }
                            }

                            $(self).html(progress + "%");
                            $(self).width(progress + "%");
                        }
                    });
                });

            }, 1000);
        });

    </script>
}